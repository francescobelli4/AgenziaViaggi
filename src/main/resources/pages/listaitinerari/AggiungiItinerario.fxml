<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" styleClass="root" stylesheets="@../styles/NuovaTappa.css" visible="true" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="20.0" styleClass="container">
         <padding>
            <Insets bottom="25.0" left="30.0" right="30.0" top="25.0" />
         </padding>
         <children>
            <Label text="Aggiungi Itinerario" textFill="#18454a">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
            <VBox spacing="5.0">
               <children>
                  <Label text="Nome dell'Itinerario" textFill="#666666">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nomeTextField" promptText="Nome" styleClass="textfield">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Costo dell'Itinerario" textFill="#666666">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Label>
                  <TextField fx:id="costoTextField" promptText="Costo" styleClass="textfield">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Tappe" textFill="#666666">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Label>
                  <ScrollPane fitToWidth="true"> <content>
                     <VBox fx:id="tappeContainer" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" spacing="10.0" />
                  </content>
                  </ScrollPane>
               </children>
            </VBox>
            <Button fx:id="aggiungiButton" mnemonicParsing="false" styleClass="button-primary" text="Aggiungi Itinerario" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font></Button>
         </children>
      </VBox>
   </children>
</StackPane>
