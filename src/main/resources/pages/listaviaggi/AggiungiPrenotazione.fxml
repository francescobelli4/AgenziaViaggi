<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" styleClass="root" stylesheets="@../styles/InfoViaggio.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="650.0" spacing="20.0" styleClass="container">
         <padding>
            <Insets bottom="25.0" left="30.0" right="30.0" top="25.0" />
         </padding>
         <children>
            <Label text="Aggiungi Prenotazione" textFill="#18454a">
               <font>
                  <Font name="System Bold" size="26.0" />
               </font>
            </Label>

            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <Label text="Elenco Prenotati" textFill="#666666">
                           <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <Button fx:id="aggiungiButton" mnemonicParsing="false" styleClass="button-add">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../icons/more.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>

                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" minHeight="250.0" prefHeight="350.0" styleClass="modern-scroll">
                     <content>
                        <VBox fx:id="listaPrenotati" spacing="10.0" style="-fx-background-color: transparent;">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            <Button fx:id="confermaButton" mnemonicParsing="false" styleClass="conferma" text="Conferma Prenotazione" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>
