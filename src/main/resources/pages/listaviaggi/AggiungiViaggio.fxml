<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" styleClass="root" stylesheets="@../styles/NuovaTappa.css" visible="true" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="20.0" styleClass="container">
         <padding>
            <Insets bottom="25.0" left="30.0" right="30.0" top="25.0" />
         </padding>
         <children>
            <Label text="Aggiungi Viaggio" textFill="#18454a">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
            <HBox spacing="15.0">
               <children>
                  <DatePicker fx:id="partenzaDatePicker" promptText="Partenza" />
                  <DatePicker fx:id="ritornoDatePicker" promptText="Ritorno" />
               </children>
            </HBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Itinerario" textFill="#666666">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Label>
                  <ScrollPane fitToWidth="true" prefHeight="200.0" prefWidth="200.0">
                     <content>
                        <VBox fx:id="itinerariesContainer" spacing="10.0" style="-fx-background-color: transparent;">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            <Button fx:id="aggiungiButton" mnemonicParsing="false" styleClass="button-primary" text="Aggiungi Viaggio" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font></Button>
         </children>
      </VBox>
   </children>
</StackPane>
